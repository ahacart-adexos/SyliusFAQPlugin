{% extends '@SyliusShop/layout.html.twig' %}

{% set saveCategoryIconSpace = false %}
{% for category in categories %}
    {% if category.iconPath is not null %}
        {% set saveCategoryIconSpace = true %}
    {% endif %}
{% endfor %}

{% block content %}
    {% if questions is empty %}
        {% include '@SherlockodeSyliusFAQPlugin/front/faq/_with_category.html.twig' %}
    {% else %}
        {% include '@SherlockodeSyliusFAQPlugin/front/faq/_without_category.html.twig' %}
    {% endif %}
{% endblock %}

{% block footer %}
    {{ parent() }}

    {% if questions is empty %}
        {% include '@SherlockodeSyliusFAQPlugin/front/faq/_with_category_footer.html.twig' %}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% include '@SyliusUi/_stylesheets.html.twig' with {'path': '/bundles/sherlockodesyliusfaqplugin/css/faq.css'} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include '@SyliusUi/_javascripts.html.twig' with {'path': '/bundles/sherlockodesyliusfaqplugin/js/front.js'} %}
{% endblock %}
